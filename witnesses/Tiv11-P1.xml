    <lg xml:id="Tiv4.72">
      <l><lb n="4"/>kanti mukatam mukaṅ kamukē</l>
    </lg>
   <lg xml:id="Tiv4.73">
      <l><lb n="5"/>peṇṇai tālampuṟ ṟāḷi pōntaiyeṉ</l>
      <l><lb n="6"/>ṟeṇṇiya nāmam paṉaiyiṉ peyarē</l>
   </lg>

   <lg xml:id="Tiv4.74">
      <l><cb n="3"/><lb n="1"/>pōntai yiḷampaṉai yākap pukalvar</l>
    </lg>

    <lg xml:id="Tiv4.75">
      <l><lb n="2"/>nāḷikēran teṅku tāḻaiyeṉa navilvar</l>
    </lg>

    <lg xml:id="Tiv4.76">
      <l><lb n="3"/>kāmpu tirikaṇ vēḻañ canti</l>
      <l><lb n="4"/>tūmpu muḷaivetir viṇṭu vēral</l>
      <l><lb n="5"/>muntūḻ taṭṭai kīcakam vēypaṇai</l>
      <l><lb n="6"/>ampuvarai vēṇuk kaḻaiyamai yōṅkal</l>
      <l><pb facs="117" n="56r"/><cb n="1"/><lb n="1"/>tikiri kaḷaikaṇ pāṇṭi luṭpaṭa</l>
      <l><lb n="2"/>varupavai mūṅki leṉavakut taṉarē</l>
    </lg>

   <lg xml:id="Tiv4.77">
      <l><lb n="3"/>kaḻaivēḻa mikkuk kaṉṉal karumpē</l>
    </lg>

   <lg xml:id="Tiv4.78">
      <l><lb n="4"/>kaṇṭal kētakai maṭikaitai muṭaṅkal</l>
      <l><lb n="5"/>vaṇṭamar tāḻai yeṉavakut taṉarē</l>
    </lg>

   <lg xml:id="Tiv4.79">
      <l><lb n="6"/>kataliyu marampaiyum vāḻai vākum</l>
    </lg>

   <lg xml:id="Tiv4.80">
      <l><cb n="2"/><lb n="1"/>kōḷi pūvātu kāykkuṅ kuḷirmaram</l>
    </lg>

   <lg xml:id="Tiv4.81">
      <l><lb n="2"/>caṇpakamum vēṅkaiyum vaṇṭuṇā malarmaram</l>
    </lg>

   <lg xml:id="Tiv4.82">
