    <lg xml:id="Tiv4.1">
       <l><cb n="1"/><lb n="1"/>cantāṉan tēvatā rantaruk kaṟpakam</l>
       <l><lb n="2"/>mantāram pāricāta mavaṟṟiṉ varukkam</l>
    </lg>

    <lg xml:id="Tiv4.2">
       <l><lb n="3"/>cānta malaiyañ cantira tilakam</l>
       <l><lb n="4"/>ēynta vārañ cantivai cantaṉam</l>
    </lg>

    <lg xml:id="Tiv4.3">
       <l><lb n="5"/>akaruvum pūḻilu makileṉa vaṟaivar</l>
       <l><lb n="6"/>pakariṟ kāta tuṇṭamu mataṟkē</l>
    </lg>

    <lg xml:id="Tiv4.4-5">
       <l><cb n="2"/><lb n="1"/>cāla marāmaram māyē vāccā</l>
    </lg>

    <lg xml:id="Tiv4.6">
       <l><lb n="2"/>vakuḷa milañci makiḻamara meṉpa</l>
    </lg>

    <lg xml:id="Tiv4.7-8">
       <l><lb n="3"/>cāti tēkkē caṇpakañ ceṇpakam</l>
    </lg>

    <lg xml:id="Tiv4.9">
