   <lg xml:id="Tiv4.92">
      <l><cb n="2"/><lb n="1"/>muṇṭaka muḷḷuṭai mūla meṉpa</l>
    </lg>

   <lg xml:id="Tiv4.93">
      <l><lb n="2"/>kaṇṭaṅ kaṭuvi muḷḷeṉak karutuvar</l>
    </lg>

   <lg xml:id="Tiv4.94">
      <l><lb n="3"/>āciṉi karilē yariyē vayiram</l>
      <l><lb n="4"/>cēkē marattiṉ kāḻppeṉac ceppuvar</l>
    </lg>

   <lg xml:id="Tiv4.95">
      <l><lb n="5"/>vēttirañ cāti cūral pirampē</l>
    </lg>

   <lg xml:id="Tiv4.96">
      <l><lb n="6"/>akakkā ḻaṉavē vaṉmara mākum</l>
      <l><cb n="2"/><lb n="1"/>avaiyē karuṅkāli mutalā yuḷḷaṉa</l>
    </lg>

   <lg xml:id="Tiv4.97">
      <l><lb n="2"/>puṟakkā ḻaṉavē vaṉpul leṉpa</l>
      <l><lb n="3"/>avaitān teriyiṟ paṉaiteṅku kamuku mūṅkil</l>
    </lg>

   <lg xml:id="Tiv4.98">
      <l><lb n="4"/>murukku nāṟpāṉ maramuta lāyiṉa</l>
      <l><lb n="5"/>veḷiṟṟumara meṉṉum vikaṟpam peṟumē</l>
    </lg>

   <lg xml:id="Tiv4.99">
      <l><lb n="6"/>arilē patukkai ciṟutū ṟākum</l>
    </lg>

   <lg xml:id="Tiv4.100">
      <l><pb facs="119" n="57r"/><cb n="1"/><lb n="1"/>pullu maraṉum putalum pūṭum</l>
      <l><lb n="2"/>valliyum peyarkkoṭai marunteṉa lākumē</l>
    </lg>

   <lg xml:id="Tiv4.101">
      <l><lb n="3"/>taitta vattirañ cattiran taṇikkē</l>
      <l><lb n="4"/>meytta nalmaruntē calliya karaṇi</l>
    </lg>

   <lg xml:id="Tiv4.102">
      <l><lb n="5"/>tuṇṭa māṉa vuṟupput tuṇiyiṉai</l>
      <l><lb n="6"/>cantucey maruntē cantāṉa karaṇi</l>
    </lg>

   <lg xml:id="Tiv4.103">
      <l><cb n="2"/><lb n="1"/>viraṇamun taḻumpum nīkki meyiṉai</l>
      <l><lb n="2"/>takaimaicey maruntē camāṉa karaṇi</l>
    </lg>

   <lg xml:id="Tiv4.104">
      <l><lb n="3"/>uyirtaru maruntē yamirtacañ cīviṉi</l>
    </lg>

   <lg xml:id="Tiv4.105">
      <l><lb n="4"/>piḷḷai kuḻavi kaṉṟēya pōtteṉak</l>
      <l><lb n="5"/>koḷpa marammuta liḷamaip peyarkkoṭai</l>
      <l><lb n="6"/>nellum pullum nērā rāṇṭē</l>
    </lg>

   <lg xml:id="Tiv4.106">
      <l><cb n="3"/><lb n="1"/>poṅkar kāmpu cāykai yuṟuppu</l>
      <l><lb n="2"/>kōṭu piṟakkañ ciṉaipaṇai yulavai</l>
      <l><lb n="3"/>kōṭaram viṭapan tarumarak kompē</l>
    </lg>

   <lg xml:id="Tiv4.107">
      <l><lb n="4"/>ulavai taḻaiyē vaḷariḷaṅ kompē</l>
    </lg>

   <lg xml:id="Tiv4.108">
      <l><lb n="5"/>pattira mōlai pācaṭai taṇṇaṭai</l>
      <l><lb n="6"/>cākai tamālan taḻaipā cilaiyaṭai</l>
      <l><pb facs="120" n="57v"/><cb n="1"/><lb n="1"/>pēciya paṉṉa milaiyeṉap paṭumē</l>
    </lg>

   <lg xml:id="Tiv4.109">
      <l><lb n="2"/>vallari kuḻaimuri mañcari kicalaiyam</l>
      <l><lb n="3"/>pallava malaṅkal kiḷaitaḷi rākum</l>
    </lg>

   <lg xml:id="Tiv4.110">
      <l><lb n="4"/>ilirttaluñ cilirttaluṅ kuḻaittalun taḷirttal</l>
    </lg>

   <lg xml:id="Tiv4.111">
      <l><lb n="5"/>muruntē mutaliṟ ceṟiveṇ kuruttē</l>
    </lg>

   <lg xml:id="Tiv4.112">
      <l><lb n="6"/>tottu miṇarun tuṇaru mañcariyum</l>
      <l><cb n="2"/><lb n="1"/>kottiṉ ṟuṭarcci kūṟuṅ kiḷavi</l>
    </lg>

   <lg xml:id="Tiv4.113-114">
      <l><lb n="2"/>pacuṅkāy tīyāḷi palaṅkaṉi paḻamē</l>
    </lg>

   <lg xml:id="Tiv4.15">
      <l><lb n="3"/>payiṉē parali ṉuṭpaṭu kuruttē</l>
    </lg>

   <lg xml:id="Tiv4.116">
      <l><lb n="4"/>piciṉē yāṉi veṭṭuk kuruttē</l>
    </lg>

   <lg xml:id="Tiv4.117">
      <l><lb n="5"/>valampuri nantiyā vaṟatta mākum</l>
    </lg>

   <lg xml:id="Tiv4.118">
      <l><lb n="6"/>kañcaṅ kullai kañcā vākum</l>
    </lg>

   <lg xml:id="Tiv4.119">
      <l><cb n="3"/><lb n="1"/>cintu vāra nīrkkuṇṭi nocci</l>
    </lg>

   <lg xml:id="Tiv4.120">
      <l><lb n="2"/>kāntaḷ tōṉṟi paṟṟai kōṭaleṉ</l>
      <l><lb n="3"/>ṟāynta nāṉkuñ ceṅkānta ḷākum</l>
    </lg>

   <lg xml:id="Tiv4.121">
      <l><lb n="4"/>ceṅkāntaḷ veṇkānta ḷeṉṟiru vikaṟpamum</l>
      <l><lb n="5"/>koṇṭē vaḻaṅkuṅ kōṭaṟ peyarē</l>
    </lg>

   <lg xml:id="Tiv4.122">
      <l><lb n="6"/>uṉmat tammē yumattaip peyarē</l>
    </lg>

   <lg xml:id="Tiv4.123+124">
      <l><pb facs="121" n="58r"/><cb n="1"/><lb n="1"/>ēraṇṭa māmaṇakkuk kōraṇṭaṅ kuṟiñci</l>
    </lg>

   <lg xml:id="Tiv4.125">
      <l><lb n="2"/>karavīra malari kaṇavīra mākum</l>
    </lg>

   <lg xml:id="Tiv4.126">
      <l><lb n="3"/>ceccai cintūram veṭci yākum</l>
    </lg>

   <lg xml:id="Tiv4.127">
      <l><lb n="4"/>uḻiñai ciṟupuḷai yāku meṉpa</l>
    </lg>

   <lg xml:id="Tiv4.128">
      <l><lb n="5"/>pañcu paṉṉal kāṟpācam parutti</l>
    </lg>

   <lg xml:id="Tiv4.129">
      <l><lb n="6"/>tippili kāmaṉ ciṟumū lakamē</l>
    </lg>

   <lg xml:id="Tiv4.130">
      <l><cb n="2"/><lb n="1"/>kullai tuḷavan tuḻāyeṉa moḻipa</l>
    </lg>

   <lg xml:id="Tiv4.131">
      <l><lb n="2"/>marīci kaṟiyivai miḷakeṉa vaippar</l>
    </lg>

   <lg xml:id="Tiv4.132-133">
      <l><lb n="3"/>mañca ḷaricaṉaṅ kantaṅ karuṇai</l>
    </lg>

   <lg xml:id="Tiv4.134">
      <l><lb n="4"/>curacañ ciṟukiḻaṅ kāku meṉpa</l>
    </lg>

   <lg xml:id="Tiv4.135">
      <l><lb n="5"/>takaran takkōlaṅ kōṭṭañ cātikkāy</l>
      <l><lb n="6"/>ilavaṅka mēlaṅ kaccōla māñciyeṉap</l>
      <l><cb n="2"/><lb n="1"/>pakarum vācantaru paṇṭap peyarē</l>
    </lg>

   <lg xml:id="Tiv4.136">
      <l><lb n="2"/>kaṭippakai yaiyavi kaṭukiṉ peyarē</l>
    </lg>

   <lg xml:id="Tiv4.137">
      <l><lb n="3"/>uruḷarici kotta maliyeṉa vuraippar</l>
    </lg>

   <lg xml:id="Tiv4.138">
      <l><lb n="4"/>kaḻaṅkē mūḻal koṭikkaḻa leṉakkarutuvar</l>
    </lg>

   <lg xml:id="Tiv4.139-140">
      <l><lb n="5"/>pakaṇṭai kilukiluppai cakuṭañ cēmpē</l>
    </lg>

   <lg xml:id="Tiv4.141">
      <l><lb n="6"/>cilli cākiṉi ciṟukīraip peyarē</l>
    </lg>

   <lg xml:id="Tiv4.142">
      <l><pb facs="122" n="58v"/><cb n="1"/><lb n="1"/></l>
    </lg>

   <lg xml:id="Tiv4.139">
      <l><lb n="6"/></l>
    </lg>

   <lg xml:id="Tiv4.139">
      <l><lb n="6"/></l>
    </lg>

   <lg xml:id="Tiv4.139">
      <l><lb n="6"/></l>
    </lg>

        <pb facs="267" n="131r"/>
        <lg xml:id="Tiv11.1">
          <l><cb n="1"/><lb n="1"/>cemaṅ kāva liṉpa miravupoṉ</l>
          <l><lb n="2"/>emāppu mayakka mema mākum</l>
        </lg>
        <lg xml:id="Tiv11.2">
         <l><lb n="3"/>ceḻumai vaḷaṉuṅ koḻuppu mākum</l>
        </lg>
        <lg xml:id="Tiv11.3">
         <l><lb n="4"/>ciṟappuc cīrmai yiṭumpaiyim mūṉṟum</l>
         <l><lb n="5"/>virikkiṉ melor viḻuma meṉpa</l>
        </lg>
        <lg xml:id="Tiv11.4">
          <l><lb n="6"/>nantal kēṭu mākkamu mākum</l>
        </lg>
        <lg xml:id="Tiv11.5">
          <l><cb n="2"/><lb n="1"/>untikop <sic>pu</sic>ḻun teruruḷu yāṟu</l>
          <l><lb n="2"/>vantuḻi yākkaṇṇato raṟuppum varaiyār</l>
        </lg>
        <lg xml:id="Tiv11.6">
         <l><lb n="3"/>nimuta lākkiya tuḷiyu maruntumutal</l>
         <l><lb n="4"/>nōynīk kiyiṉpaṅ koṭukkum poruḷum</l>
         <l><lb n="5"/>kūṟai mācu kaḻuvu nīrum</l>
         <l><lb n="6"/>pāluṟu piraiyuṅ kārama moḻukalum</l>
         <l><cb n="3"/><lb n="1"/>ōriṭaic collu muṟaiye ṉaṟkupa</l>
        </lg>
        <lg xml:id="Tiv11.7">
         <l><lb n="2"/>uḷarum valiyum muṟaiyuñ cayaṉamum</l>
          <l><lb n="3"/>pāḻi yeṉṟu pakarap paṭume</l>
        </lg>
        <lg xml:id="Tiv11.8">
         <l><lb n="4"/>vemmai veṇṭal viraiveṉa viḷampuvar</l>
        </lg>

        <pb facs="296" n="145v"/>

        <lg xml:id="Tiv11.372">
          <l><cb n="3"/><lb n="2"/>uḻavu <sic>ni</sic>ri leḻuvatōr putalum</l>
          <l><lb n="3"/>kuḻaiyu makiḻcciyu maḻaku meṉṟivai</l>
          <l><lb n="4"/>tuyaruṟuṅ kūṟun toyyaṟ kiḷavi</l>
        </lg>
        <lg xml:id="Tiv11.373">
          <l><lb n="5"/><sic>ki</sic>tamu niṟaṉuñ cenniṟak keḻuvu</l>
          <l><lb n="6"/>ātaravu muṭukiyalu mārak keṉappaṭumē</l>
        </lg>

