    <p xml:id="Tiv4.1-head"><cb n="1"/><lb n="1"/>teyvattarukkaḷiṉ peyar -</p>
      <lg xml:id="Tiv4.1">
        <l><lb n="2"/>cantāṉan tēvatā rantaru kaṟpakam - 1</l>
      </lg>

   <p xml:id="Tiv4.2-head"><lb n="3"/>avaṟṟiṉ varukka tāṉpeyar</p>
      <lg xml:id="Tiv4.2">
        <l><lb n="4"/>mantāram pāricātam avaṟṟiṉ varukkam 2</l>
      </lg>

   <p xml:id="Tiv4.3-head"><lb n="5"/>cantaṉattiṉ peyar</p>
      <lg xml:id="Tiv4.3">
        <l><lb n="6"/>cānta malaiyañ cantira tilakam</l>
        <l><lb n="7"/>ēynta āram cantu ivai cantaṉam 3</l>
      </lg>

   <p xml:id="Tiv4.4-head"><lb n="8"/>akiliṉ peyar</p>
      <lg xml:id="Tiv4.4">
        <l><lb n="9"/>akaruvum pūḻilum akileṉa vaṟaivar</l>
        <l><lb n="10"/>pakariṟ kāka tuṇṭamum ākum 4</l>
      </lg>

   <p xml:id="Tiv4.5-head"><cb n="2"/><lb n="1"/>āccāmarattiṉ peyar</p>
      <lg xml:id="Tiv4.5">
        <l><lb n="2"/>cālam marāmaram āvē āccā 5</l>
      </lg>

   <p xml:id="Tiv4.6-head"><lb n="3"/>makiḻamarattiṉ peyar</p>
      <lg xml:id="Tiv4.6">
        <l><lb n="4"/>vakuḷam ilañci makiḻamara meṉpa 6</l>
      </lg>

   <p xml:id="Tiv4.7-8-head"><lb n="5"/>tēkkiṉ peyar ceṇpakattiṉ peyar</p>
      <lg xml:id="Tiv4.7-8">
        <l><lb n="6"/>cāti tēkkē -7- caṇpakañ ceṇpakam 8</l>
      </lg>

   <p xml:id="Tiv4.9-head"><lb n="7"/>ālamarattiṉ peyar</p>
      <lg xml:id="Tiv4.9">
        <l><lb n="8"/>pūtavam kāmaram vaṭamaram toṉmaram</l>
      <l><lb n="9"/>ōtiya paḻumaram kōḷi āralē 9</l>
      </lg>

   <p xml:id="Tiv4.10-head"><lb n="10"/>araciṉ peyar</p>
      <lg xml:id="Tiv4.10">
        <l><lb n="11"/>kaṇavam paṇaiyē marāmaram pōti</l>
        <l><lb n="12"/>accu vattam pippilam āracē <num rend="traditional">10</num></l>
      </lg>

   <p xml:id="Tiv4.11-head"><cb n="3"/><lb n="1"/>acōkiṉ peyar</p>
      <lg xml:id="Tiv4.11">
        <l><lb n="2"/>piṇṭi ceyalai kākkōḷi acōku 11</l>
      </lg>

   <p xml:id="Tiv4.12-13-head"><lb n="3"/>ittiṟakkum - maruttiṟkum peyar</p>
      <lg xml:id="Tiv4.12-13">
        <l><lb n="4"/>iṟali itti -12- aruccuṉa marutē 13</l>
      </lg>

   <p xml:id="Tiv4.14-head"><lb n="5"/>koṉṟaiyiṉ peyar</p>
      <lg xml:id="Tiv4.14">
        <l><lb n="6"/>itaḻi kaṭukkai ārakkuvatam koṉṟai 14</l>
      </lg>

   <p xml:id="Tiv4.15-head"><lb n="7"/>kuraviṉ peyar</p>
      <lg xml:id="Tiv4.15">
        <l><lb n="8"/>kōṭṭam kōṭilam kuraveṉak kūṟuvar 15</l>
      </lg>

   <p xml:id="Tiv4.16-17-head"><lb n="9"/>nāvalukkum vēmpukkum peyar</p>
      <lg xml:id="Tiv4.17">
        <l><lb n="10"/>campu nāval -16- nimpam vēmpē 17</l>
      </lg>

   <p xml:id="Tiv4.18-head"><lb n="11"/>attiyiṉ peyar</p>
      <lg xml:id="Tiv4.18">
        <l><pb facs="65"/><cb n="1"/><lb n="1"/>atavum utumparamum atti yākum - 18</l>
      </lg>

   <p xml:id="Tiv4.19-head"><lb n="2"/>puḷimāviṉ peyar</p>
      <lg xml:id="Tiv4.19">
        <l><lb n="3"/>āmiram cūtam māḻai puḷimā</l>
      </lg>

   <p xml:id="Tiv4.20-head"><lb n="4"/>tēmāviṉ peyar</p>
      <lg xml:id="Tiv4.20">
        <l><lb n="5"/>cūtam cēkaram āmiram kokkē</l>
        <l><lb n="6"/><gap reason="illegible" quantity="1" unit="character"/>ttit turaittavai tēmāp peyarē</l>
      </lg>

   <p xml:id="Tiv4.21-head"><lb n="7"/>iruppaiyiṉ peyar</p>
      <lg xml:id="Tiv4.21">
        <l><lb n="8"/>matūkam iruppai eṉavakut taṉarē 2<num rend="traditional">10</num>1</l>
      </lg>

   <p xml:id="Tiv4.22-head"><lb n="9"/>ceruntiyiṉ peyar</p>
      <lg xml:id="Tiv4.22">
        <l><cb n="2"/><lb n="1"/>pañcaram ceṅkōṭu ceruntiyeṉap pakarvar 22</l>
      </lg>

   <p xml:id="Tiv4.23-head"><lb n="2"/>kōṅkiṉ peyar</p>
      <lg xml:id="Tiv4.23">
        <l><lb n="3"/>kuyā cūṭiṉar kaṉṉikāram kōṅkē 23</l>
      </lg>

   <p xml:id="Tiv4.24-head"><lb n="4"/>paccilai marattiṉ peyar</p>
      <lg xml:id="Tiv4.24">
        <l><lb n="5"/>pacumpiṭi tamālam paccilai yākum 24</l>
      </lg>

   <p xml:id="Tiv4.25-head"><lb n="6"/>vaṉṉiyiṉ peyar</p>
      <lg xml:id="Tiv4.25">
        <l><lb n="7"/>kalikam camiyē vaṉṉiyeṉ ṟākum 25</l>
      </lg>

   <p xml:id="Tiv4.26-27-head"><lb n="8"/>karuṅkāliyiṉum eṭṭiṉum peyar</p>
      <lg xml:id="Tiv4.26-27">
        <l><lb n="9"/>kātiram karuṅkāli -26- kāñcirai eṭṭi 27</l>
      </lg>

   <p xml:id="Tiv4.2-head"><cb n="3"/><lb n="1"/>ceṅkaruṅkāliyiṉ peyar</p>
      <lg xml:id="Tiv4.28">
        <l><lb n="2"/>ciṟumā rōṭam ceṅkaruṅ kāli 28</l>
      </lg>

   <p xml:id="Tiv4.29-30-head"><lb n="3"/>puṉṉaikkum curapuṉṉaikkum peyar</p>
      <lg xml:id="Tiv4.29-30">
        <l><lb n="4"/>puṉṉākam puṉṉai -2<num rend="traditional">10</num>9- vaḻaicura puṉṉai 30</l>
      </lg>

   <p xml:id="Tiv4.31-head"><lb n="5"/>puṉamuruṅkaiyiṉ peyar</p>
      <lg xml:id="Tiv4.31">
        <l><lb n="6"/>puṉku eṉ kiḻavi puṉamuruṅkaip peyarē 31</l>
      </lg>

   <p xml:id="Tiv4.32-head"><lb n="7"/>āttiyiṉ peyar</p>
      <lg xml:id="Tiv4.32">
        <l><lb n="8"/>ārē tātaci ātti yākum 32</l>
      </lg>

   <p xml:id="Tiv4.33-34-head"><lb n="9"/>mañcāṭikkum ilaviṟkum peyar</p>
      <lg xml:id="Tiv4.33-34">
        <l><lb n="10"/>tilakam mañcāṭi -3<num rend="traditional">10</num>3- poṅkar ilavam 34</l>
      </lg>

   <p xml:id="Tiv4.35-36-head"><pb facs="66"/><cb n="1"/><lb n="1"/>nellikkuṅ kaṭumarattiṟkum peyar</p>
      <lg xml:id="Tiv4.35-36">
        <l><lb n="2"/>āmalakam nelli -35- aritaki kaṭumaram 36</l>
      </lg>

   <p xml:id="Tiv4.37-head"><lb n="3"/>puḷiyiṉ peyar</p>
      <lg xml:id="Tiv4.37">
        <l>cintukam cintūram ciṟanta āvēm</l>
        <l><lb n="4"/>vanta tintiruṇi ekiṉam puḷiyē 37</l>
      </lg>

   <p xml:id="Tiv4.38-39-head"><lb n="5"/>kuruntiṟkum veṭpālaiyiṉ/kkum peyar</p>
      <lg xml:id="Tiv4.38-39">
        <l><lb n="6"/>kuntam kuruntu -38- kuṭacam veṭpālai 39</l>
      </lg>

   <p xml:id="Tiv4.40-head"><lb n="7"/>kumiḻiṉ peyar</p>
      <lg xml:id="Tiv4.40">
        <l><lb n="8"/>kūmpal kaṭampal kumiḷeṉak kūṟuvar 40</l>
      </lg>

   <p xml:id="Tiv4.41-42-head"><lb n="9"/>vēlamarattiṟkkum pātirimarattiṟkum peyar</p>
      <lg xml:id="Tiv4.41-42">
        <l><cb n="2"/><lb n="1"/>uṭaikuṭai vēlē -41- pāṭalam pātiri 41</l>
      </lg>

   <p xml:id="Tiv4.43-head"><lb n="2"/>murukkiṉ peyar</p>
      <lg xml:id="Tiv4.43">
        <l><lb n="3"/>kavirē kiñcukam murukkē karutuvar 43</l>
      </lg>

   <p xml:id="Tiv4.44-45-head"><lb n="4"/>tēṟṟukkum viḷāvukkum peyar</p>
      <lg xml:id="Tiv4.44-45">
        <l><lb n="5"/>illam tēṟām -44- veḷḷil viḻāvām 44[sic]</l>
      </lg>

   <p xml:id="Tiv4.46-head"><lb n="6"/>kūviḻai marattiṉ peyar</p>
      <lg xml:id="Tiv4.46">
        <l><lb n="7"/>kūviḷam villuvam mālūr kūviḻai 46</l>
      </lg>

   <p xml:id="Tiv4.47-head"><lb n="8"/>vēṅkaiyiṉ peyar</p>
      <lg xml:id="Tiv4.47">
        <l><lb n="9"/>cimicum timilum kaṇiyum vēṅkai 47</l>
      </lg>

   <p xml:id="Tiv4.48-head"><cb n="3"/><lb n="1"/>kaṭampiṉ peyar</p>
      <lg xml:id="Tiv4.48">
        <l><lb n="2"/>katampam vicālam nīpam kaṭampē 48</l>
      </lg>

   <p xml:id="Tiv4.49-head"><lb n="3"/>palāviṉ peyar</p>
      <lg xml:id="Tiv4.49">
        <l><lb n="4"/>paṉacam varukkaip pālāvā kummē 49</l>
      </lg>

   <p xml:id="Tiv4.50-head"><lb n="5"/>irappalāviṉ peyar</p>
      <lg xml:id="Tiv4.50">
        <l><lb n="6"/>āciṉi īrap palāveṉa pakaruvar 50</l>
      </lg>

   <p xml:id="Tiv4.51-head"><lb n="7"/>aḻiñcil marattiṉ peyar</p>
      <lg xml:id="Tiv4.51">
        <l><lb n="8"/>aḻiñcil cēmaram aṅkōla mākum 51</l>
      </lg>

   <p xml:id="Tiv4.52-head"><lb n="9"/>mātaḷaiyiṉ peyar</p>
      <lg xml:id="Tiv4.52">
        <l><pb facs="67"/><cb n="1"/><lb n="1"/>mātuḷam kaḻumuḷ mātaḷaiyā yākum</l>
      </lg>

   <p xml:id="Tiv4.53-head"><lb n="2"/>tātu mātaḷaiyiṉ peyar</p>
      <lg xml:id="Tiv4.53">
        <l><lb n="3"/>tāṭimam tātu mātaḷai yeṉpa</l>
      </lg>

   <p xml:id="Tiv4.54-head"><lb n="4"/>elumicciṉ peyar</p>
      <lg xml:id="Tiv4.54">
        <l><lb n="5"/>campīram muruku elumiccu/catarpalam mākum</l>
      </lg>

   <p xml:id="Tiv4.55-head"><lb n="6"/>nārattiṉ peyar</p>
      <lg xml:id="Tiv4.55">
        <l><lb n="7"/>narantam nārattu nāma mākum</l>
      </lg>

   <p xml:id="Tiv4.56-head"><lb n="8"/>kurukkattiyiṉ peyar</p>
      <lg xml:id="Tiv4.2">
        <l><cb n="2"/><lb n="1"/>kurukē vacanta/mātavik kurukkatti yākum</l>
      </lg>

   <p xml:id="Tiv4.57-58-head"><lb n="2"/>akattikkum erukkukkum peyar</p>
      <lg xml:id="Tiv4.57-58">
        <l><lb n="3"/>accam akatti -57- arukkam erukkē 58</l>
      </lg>

   <p xml:id="Tiv4.59-60-head"><lb n="4"/>kaḷāviṟkum irantaikkum peyar</p>
      <lg xml:id="Tiv4.59-60">
        <l><lb n="5"/>kaḷam kaḷāvē -59- iratti irantai 60</l>
      </lg>

   <p xml:id="Tiv4.61-head"><lb n="6"/>kāyāmarattiṉ peyar</p>
      <lg xml:id="Tiv4.61">
        <l><lb n="7"/>kācai pūvai kāyā vākum</l>
      </lg>

   <p xml:id="Tiv4.62-62-head"><lb n="8"/>cuḷḷikkum ñāḻalukkum peyar</p>
      <lg xml:id="Tiv4.62-62">
        <l><lb n="9"/>naṟavam cuḷḷi -62- nākam ñāḻal 62[sic]</l>
      </lg>

   <p xml:id="Tiv4.63-head"><cb n="3"/><lb n="1"/>kuṅkuma marattiṉ peyar</p>
      <lg xml:id="Tiv4.63">
        <l><lb n="2"/>maravam turukkam kuṅkuma mākum</l>
      </lg>

   <p xml:id="Tiv4.64-65-head"><lb n="3"/>taṇakkukkum ōṭaikkum peyar</p>
      <lg xml:id="Tiv4.64-65">
        <l><lb n="4"/>nuṇavai taṇakkē -64- ulavai ōṭai 65</l>
      </lg>

   <p xml:id="Tiv4.66-67-head"><lb n="5"/>uṭumpaikkum  uḻiñcilukkum peyar</p>
      <lg xml:id="Tiv4.66-67">
        <l><lb n="6"/>oṭuvai uṭuppai -66- uṉṉam uḻiñcil 67</l>
      </lg>

   <p xml:id="Tiv4.68-head"><lb n="7"/>orupeyaraiyuṭaiya maraṅkaḷiṉ peyar</p>
      <lg xml:id="Tiv4.68">
        <l><lb n="8"/>ekiṉam cēmaram āṇmaram meṉacaṟivai</l>
        <l><lb n="9"/>orumaram orupeyar uraikkum kiḷavi</l>
      </lg>

   <p xml:id="Tiv4.69-head"><pb facs="67"/><cb n="1"/><lb n="1"/>kamukiṉ  peyar</p>
      <lg xml:id="Tiv4.69">
        <l><lb n="2"/>kanti pūkatam pūkaṅ kamukē</l>
      </lg>
      
   <p xml:id="Tiv4.70-head"><lb n="3"/>paṉaiyiṉ peyar</p>
      <lg xml:id="Tiv4.70">
        <l><lb n="4"/>peṇṇai tālam pul tāḷi pōntai eṉ</l>
        <l><lb n="5"/>ṟeṇṇiya nāmam paṉaiyeṉa vicaippar</l>
      </lg>
      
   <p xml:id="Tiv4.71-head"><lb n="6"/>iḷampaṉaiyiṉ peyar</p>
      <lg xml:id="Tiv4.71">
        <l><lb n="7"/>pōntai yiḷampaṉai ākap pukalvar</l>
      </lg>
      
   <p xml:id="Tiv4.72-head"><lb n="8"/>teṅkkiṉ peyar</p>
      <lg xml:id="Tiv4.72">
        <l><lb n="9"/>nāḷikēram tāḻai teṅkeṉa navilvar</l>
      </lg>
      
   <p xml:id="Tiv4.73-head"><cb n="2"/><lb n="1"/>mūṅkiliṉ peyar</p>
      <lg xml:id="Tiv4.73">
        <l><lb n="2"/>kāmpu tirikaṇ vēḻaḷam canti</l>
        <l><lb n="3"/>tūmpu muḷaivēr viṇṭu vēral</l>
        <l><lb n="4"/>muntūḷ taṭṭai kīcakam vēypaṇai</l>
        <l><lb n="5"/>ampu vēṇukaḻai amai ōṅkal</l>
        <l><lb n="6"/>tikiri kiḷaikaṇ pāṇṭil varai eṉa</l>
        <l><lb n="7"/>varuvavai mūṅkil eṉavakut taṉarē</l>
      </lg>
      
   <p xml:id="Tiv4.74-head"><lb n="8"/>karumpiṉ peyar</p>
      <lg xml:id="Tiv4.74">
        <l><lb n="9"/>kaḻaivēḻam ikku kaṉṉal karumpē</l>
      </lg>
      
   <p xml:id="Tiv4.75-head"><cb n="3"/><lb n="1"/>tāḻaiyiṉ peyar</p>
      <lg xml:id="Tiv4.75">
        <l><lb n="2"/>kaṇṭal kētatai maṭikaitai muṭaṅkal</l>
        <l><lb n="3"/>vaṇṭamir tāḻai eṉavakut taṉarē</l>
      </lg>
      
   <p xml:id="Tiv4.76-head"><lb n="4"/>vāḻaiyiṉ peyar</p>
      <lg xml:id="Tiv4.76">
        <l><lb n="5"/>kataliyum arampaiyum vāḻai yākum</l>
      </lg>
      
   <p xml:id="Tiv4.77-head"><lb n="6"/>avaṟṟuḷ pūvātu kāykkumarattiṉ peyar</p>
      <lg xml:id="Tiv4.77">
        <l><lb n="7"/>kōḷi pūvātu kāykkum kuḷir<gap reason="lost" quantity="3" unit="character"/></l>
      </lg>
      
   <p xml:id="Tiv4.78-head"><lb n="8"/>vaṇṭuṇā malarmarattiṉ peyar</p>
      <lg xml:id="Tiv4.78">
        <l><lb n="9"/>caṇpakamum vēṅkaiyum vaṇṭuṇā malarma<gap reason="lost" quantity="2" unit="character"/></l>
