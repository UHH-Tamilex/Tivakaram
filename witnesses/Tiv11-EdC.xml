    <head type="sub"><pb n="649" facs="137"/><lb n="1"/>patiṉōrāvatu</head>
    <head><lb n="2"/>orucol palporuṭ peyart tokuti</head>
 
    <head corresp="#Tiv11.1-head"><lb n="3"/><num xml:lang="en">1902.</num> ēmam eṉṉum peyar</head>
    <lg corresp="#Tiv11.1">
        <l><lb n="4"/>cēmam, kāval, iṉpam, iravu, poṉ,</l>
        <l><lb n="5"/>ēmāppu, mayakkam ēmam ākum.</l>
    </lg>
      <p><lb n="6"/>ēmam eṉṉum peyar: <num xml:lang="en">(7)</num></p>
      <p><lb n="7"/><num xml:lang="en">1.</num> cēmam, <num xml:lang="en">2.</num> kāval, <num xml:lang="en">3.</num> iṉpam, <num xml:lang="en">4.</num> iravu, <lb n="8"/><num xml:lang="en">5.</num> poṉ, <num xml:lang="en">6.</num> ēmāppu, <num xml:lang="en">7.</num> mayakkam.</p>

    <head corresp="#Tiv11.2-head"><lb n="9"/><num xml:lang="en">1903.</num> ceḻumai eṉṉum peyar</head>
    <lg corresp="#Tiv11.2">
        <l><lb n="10"/>ceḻumai, vaḷaṉum <app><lem>koḻuppu m</lem><rdg wit="#p1">koḻumai </rdg></app>ākum.</l>
    </lg>
    <p><lb n="11"/>ceḻumai eṉṉum peyar: <num xml:lang="en">(2)</num></p>
    <p><lb n="12"/><num xml:lang="en">1.</num> vaḷaṉ, <num xml:lang="en">2.</num> koḻuppu.</p>
    <p><lb n="13"/>pāṭavēṟupāṭu―viḷakkam</p>
      <p><lb n="14"/><num xml:lang="en">1.</num> koḻumai.</p>

    <head corresp="#Tiv11.3-head"><lb n="15"/><num xml:lang="en">1904.</num> viḻumam eṉṉum peyar</head>
    <lg corresp="#Tiv11.3">
        <l><lb n="16"/>ciṟappu, cīrmai, iṭumpaiim mūṉṟum</l>
        <l><lb n="17"/>virikkiṉ, mēlōr viḻumam <app><lem>eṉpa</lem><rdg wit="#p1">eṉpar</rdg></app>.</l>
    </lg>
    <p><lb n="18"/>viḻumam eṉṉum peyar: <num xml:lang="en">(3)</num></p>
      <p><lb n="19"/><num xml:lang="en">1.</num> ciṟappu, <num xml:lang="en">2.</num> cīrmai, <num xml:lang="en">3.</num> iṭumpai.</p>
    <p><lb n="20"/>pāṭavēṟupāṭu―viḷakkam</p>
    <p><lb n="21"/><num xml:lang="en">2:4</num> eṉpar.</p>

    <head corresp="#Tiv11.4-head"><lb n="22"/><num xml:lang="en">1905.</num> nantal eṉṉum peyar</head>
    <lg corresp="#Tiv11.4">
        <l><lb n="23"/>nantal, kēṭum ākkamum ākum.</l>
    </lg>
    <p><lb n="24"/>nantal eṉṉum peyar: <num xml:lang="en">(2)</num></p>
    <p><lb n="25"/><num xml:lang="en">1.</num> kēṭu, <num xml:lang="en">2.</num> ākkam.</p>

    <head corresp="#Tiv11.5-head"><pb n="650" facs="138"/><lb n="1"/><num xml:lang="en">1906.</num> unti eṉṉum peyar</head>
    <lg corresp="#Tiv11.5">
        <l><lb n="2"/>unti, kop pūḻum, tēruruḷum, yāṟum,</l>
        <l><lb n="3"/>(vantuḻi) yāḻk kaṇṇatōr uṟuppum varaiyār.</l>
    </lg>
    <p><lb n="4"/>unti eṉṉum peyar: <num xml:lang="en">(4)</num></p>
      <p><lb n="5"/><num xml:lang="en">1.</num> koppūḻ, <num xml:lang="en">2.</num> tēruruḷ, <num xml:lang="en">3.</num> yāṟu, <num xml:lang="en">4.</num> yāḻk <lb n="6"/>kaṇṇatōr uṟuppu.</p>

    <head corresp="#Tiv11.6-head"><lb n="7"/><num xml:lang="en">1907.</num> uṟai eṉṉum peyar</head>
    <lg corresp="#Tiv11.6">
        <l><lb n="8"/>nīrmuta lākiya tuḷiyum, maruntumutal</l>
        <l><lb n="9"/>nōy nīkki iṉpam koṭukkum poruḷum,</l>
        <l><lb n="10"/>kūṟai mācu kaḻuvuvar nīrum,</l>
        <l><lb n="11"/>pāluṟu piraiyum, kāramum, <app><lem>oḻukalum</lem><rdg wit="#p1">oḻukkamum</rdg></app>,</l>
        <l><lb n="12"/>ōr·iṭaic collum uṟai eṉaṟku uriya.</l>
    </lg>
    <p><lb n="13"/>uṟai eṉṉum peyar: <num xml:lang="en">(7)</num></p>
      <p><lb n="14"/><num xml:lang="en">1.</num> nīr mutalākiya tuḷi, <num xml:lang="en">2.</num> maruntu mutal nōy nīkki <lb n="15"/>iṉpam koṭukkum poruḷ, <num xml:lang="en">3.</num> kūṟai mācu kaḻuvuvar nīr, <lb n="16"/><num xml:lang="en">4.</num> pāluṟu pirai, <num xml:lang="en">5.</num> kāram, <num xml:lang="en">6</num>oḻukal, <num xml:lang="en">7.</num> ōr iṭaic <lb n="17"/>col.</p>
      <p><lb n="18"/>pāṭavēṟupāṭu ― viḷakkam</p>
      <p><lb n="19"/><num xml:lang="en">4:4</num> oḻukkamum</p>

    <head corresp="#Tiv11.7-head"><lb n="20"/><num xml:lang="en">1908.</num> pāḻi eṉṉum peyar</head>
    <lg corresp="#Tiv11.7">
        <l><lb n="21"/>ūrum, <app><lem>valiyum</lem><rdg wit="#p1">valimaiyum</rdg></app>, uṟaiyuḷum, cayaṉamum,</l>
        <l><lb n="22"/>pāḻi eṉṟu pakarap paṭumē.</l>
    </lg>
      <p><lb n="23"/>pāḻi eṉṉum peyar: <num xml:lang="en">(4)</num></p>
    <p><lb n="24"/><num xml:lang="en">1.</num> ūr, <num xml:lang="en">2.</num> vali, <num xml:lang="en">3.</num> uṟaiyuḷ, <num xml:lang="en">4.</num> cayaṉam.</p>
      <p><lb n="25"/>pāṭavēṟupāṭu ― viḷakkam</p>
      <p><lb n="26"/><num xml:lang="en">1:2</num> valimaiyum.</p>

    <head corresp="#Tiv11.8-head"><lb n="27"/><num xml:lang="en">1909.</num> vemmai eṉṉum peyar</head>
    <lg corresp="#Tiv11.8">
        <l><lb n="28"/>vemmai, vēṇṭal, viraivu eṉa viḷampuvar.</l>
    </lg>
    <p><lb n="29"/>vemmai eṉṉum peyar: <num xml:lang="en">(2)</num></p>
    <p><lb n="30"/><num xml:lang="en">1.</num> vēṇṭal, <num xml:lang="en">2.</num> viraivu.</p>
