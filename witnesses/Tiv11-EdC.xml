  <head><pb n="781" facs="269"/><lb n="1"/>orucoṟ palporuṭ peyart tokuti</head>
 
  <head><lb n="2"/><num xml:lang="en">1.</num> aṅkatam eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx1">
    <l><lb n="3"/>aṅkatam tōḷaṇi aravum ākum.</l>
    <trailer><num xml:lang="en">(1)</num></trailer>
  </lg>
  
   <head><lb n="4"/><num xml:lang="en">2.</num> acaital eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx2">
    <l><lb n="5"/>acaital <app><lem>nōtalum</lem><rdg wit="#p1">nērtalum</rdg><rdg wit="#accu">āṭalum</rdg></app> taṅkalum <app><lem>ākum</lem><rdg wit="#mura">urittē</rdg></app>.</l>
    <trailer><num xml:lang="en">(2)</num></trailer>
  </lg>
  
  <head><pb n="782" facs="270"/><lb n="1"/><num xml:lang="en">3.</num> aṭutal eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx3">
    <l><lb n="2"/>aṭutal <app><lem>miṟaiceyalum</lem><rdg wit="#p1">micai ceyalum</rdg><rdg wit="#accu">camaittalum</rdg></app> kōṟalu mākum.</l>
    <trailer><num xml:lang="en">(3)</num></trailer>
  </lg>
  
  <head><lb n="4"/><num xml:lang="en">4.</num> aṇaṅku eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx4">
    <l><lb n="5"/>teyvamum <app><lem>teyvattuvamai mātarum</lem><rdg wit="#p1">tuvamai cey mātarum</rdg></app></l>
    <l><lb n="6"/><app><lem>maiya ṉōyum</lem><rdg wit="#p1">maiyalu nōyum</rdg></app> varuttamum kolaiyum</l>
    <l><lb n="7"/>aiyamiṉ ṟuraikkum aṇaṅkeṉ kiḷavi.</l>
    <trailer><num xml:lang="en">(6)</num></trailer>
  </lg>
  
    <head><lb n="10"/><num xml:lang="en">5.</num> aṇi eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx5">
    <l><lb n="11"/>aṇiyē pūṇum aḻakum ākum.</l>
  </lg>
  <p><lb n="12"/>innūṟpā mu.rā. piratiyil illai.</p>
  
   <head><lb n="13"/><num xml:lang="en">6.</num> aṇṭar eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx6">
    <l><lb n="14"/>aṇṭar tēvarum āyarum ākum.</l>
    <trailer><num xml:lang="en">(4)</num></trailer>
  </lg>
  
   <head><lb n="15"/><num xml:lang="en">7.</num> aṇṇal eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx7">
    <l><lb n="16"/>aṇṇal perumaiyum <app><lem>talaivaṉum ākum</lem><rdg wit="#p1">aracaṉu mākum</rdg><rdg wit="#accu">talaivaṉu maṇukalum</rdg></app>.</l>
    <trailer><num xml:lang="en">(5)</num></trailer>
  </lg>
  <p><lb n="17"/><num xml:lang="en">3-4</num> aracaṉu mākum, talaivaṉu maṇukalum (accu)</p>
  
    <head><lb n="18"/><num xml:lang="en">8.</num> antam eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx8">
    <l><lb n="19"/>antam īṟum aḻakum ākum.</l>
    <trailer><num xml:lang="en">(7)</num></trailer>
  </lg>
  <p><lb n="20"/>iṟum eṉa i eṉpataṉ mēl vaḷaivil cuḻiyiṭṭa vaṭivam kāṇkiṟatu.</p>
  
      <head><lb n="21"/><num xml:lang="en">9.</num> antil eṉṉum peyar</head>
  <lg xml:id="Tiv11.xx9">
    <l><lb n="22"/>antil <app><lem>āṅkum</lem><rdg wit="#p1">āṅka</rdg></app> acainilaik kiḷavi.</l>
    <trailer><num xml:lang="en">(8)</num></trailer>
  </lg>
  <p><lb n="23"/><num xml:lang="en">2</num> āṅka.</p>

  <pb n="790" facs="278"/>

  <head corresp="#Tiv11.5-head"><lb n="1"/><num xml:lang="en">52.</num> unti eṉṉum peyar</head>
  <lg corresp="#Tiv11.5">
    <l><lb n="2"/>unti koppūḻum tēruruḷum yāṟum</l>
    <l><lb n="3"/>vantuḻi yāḻkkaṇṇatō ruṟuppum varaiyār</l>
  </lg>

  <pb n="791" facs="279"/>

  <head corresp="#Tiv11.6-head"><lb n="1"/><num xml:lang="en">58.</num> uṟai eṉṉum peyar</head>
  <lg corresp="#Tiv11.6">
    <l><lb n="2"/>nīrmuta lākiya tuḷiyum maruntum</l>
    <l><lb n="3"/>mutaṉōy nīkki yiṉpaṅ koṭukkum</l>
    <l><lb n="4"/>poruḷum kūṟai mācu kaḻuvuvar nīrum</l>
    <l><lb n="5"/>pāluṟu piraiyum kāramum oḻukalum</l>
    <l><lb n="6"/>oriṭaic collum uṟaiyeṉaṟ kuriya.</l>
  </lg>

  <pb n="793" facs="281"/>

  <head><lb n="11"/><num xml:lang="en">71.</num> ēmam eṉṉum peyar</head>
  <lg corresp="#Tiv11.1">
    <l><lb n="12"/>cēmam kāval iṉpam iravu poṉ</l>
    <l><lb n="13"/>ēmāppu mayakkam ēmam ākum.</l>
  </lg>

  <pb n="810" facs="298"/>

  <head><lb n="1"/><num xml:lang="en">171.</num> ceḻumai eṉṉum peyar</head>
  <lg corresp="#Tiv11.2">
    <l><lb n="2"/>ceḻumai vaḷaṉum koḻuppum ākum.</l>
  </lg>

  <pb n="816" facs="304"/>

  <head corresp="#Tiv11.4-head"><lb n="5"/><num xml:lang="en">209.</num> nantal eṉṉum peyar</head>
  <lg corresp="#Tiv11.4">
    <l><lb n="5"/>nantal kēṭum ākkamum ākum.</l>
  </lg>

  <pb n="824" facs="312"/>

  <head corresp="#Tiv11.7-head"><lb n="4"/><num xml:lang="en">255.</num> pāḻi eṉṉum peyar</head>
  <lg corresp="#Tiv11.7">
    <l><lb n="5"/>ūrum valiyum uṟaiyuḷum cayaṉamum</l>
    <l><lb n="6"/>pāḻi eṉṟu pakarap paṭumē.</l>
  </lg>

  <pb n="840" facs="328"/>

  <head corresp="#Tiv11.3-head"><lb n="1"/><num xml:lang="en">346.</num> viḻumam eṉṉum peyar</head>
  <lg corresp="#Tiv11.3">
    <l><lb n="2"/>ciṟappuc cīrmai iḷumpai immūṉṟum</l>
    <l><lb n="3"/>virikkiṉ mēlōr viḻumam eṉpa.</l>
  </lg>

  <head corresp="#Tiv11.8-head"><lb n="17"/><num xml:lang="en">352.</num> vemmai eṉṉum peyar</head>
  <lg corresp="#Tiv11.8">
    <l><lb n="18"/>vemmai vēṇṭal <app><lem>viraivu eṉa viḷampular</lem><rdg wit="#mura">viraiveṉap paṭumē</rdg></app>.</l>
  </lg>
      <p><lb n="19"/><num xml:lang="en">3-4</num> viraiveṉap paṭumē (mu.rā)</p>

