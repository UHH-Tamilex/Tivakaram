    <pb facs="258" n="770"/>
      <head type="sub"><lb n="1"/>antap poruḷ</head>
      <lg corresp="#Tiv11.1">
        <l><lb n="1"/><num xml:lang="en">1.</num> cēmaṅ kāval iṉpam iravupoṉ</l>
        <l><lb n="2"/>ēmāppu mayakkamum ēma mākum.</l>
      </lg>
      <lg corresp="#Tiv11.3">
        <l><lb n="2"/><num xml:lang="en">2.</num> ciṟappuc cīrmai yiṭumpaiyim mūṉṟum</l>
